	Результат.Вставить("СФ"			, "СФТОРГ12АКТ_820");
	Результат.Вставить("ДОП"		, "СФТОРГ12АКТ_820");
	Результат.Вставить("ТОРГ12АКТ"	, "СФТОРГ12АКТ_820");
	Результат.Вставить("НЕТ"		, "СФТОРГ12АКТ_820");
	
	Возврат Результат;
	
КонецФункции

