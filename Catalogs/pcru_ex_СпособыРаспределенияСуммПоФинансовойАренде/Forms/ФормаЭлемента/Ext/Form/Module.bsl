		Если НЕ Строка.БратьОстаток И Строка.Процент = 0 Тогда
			СообщениеПользователю = Новый СообщениеПользователю;
			СообщениеПользователю.Текст = "Процент в строке " + Строка(Строка.НомерСтроки)  + " не указан";
			СообщениеПользователю.Сообщить();
			Отказ = ИСТИНА;
		КонецЕсли;
	КонецЦикла;

